{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "react-jsx",
    "checkJs": false,
    "allowJs": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
